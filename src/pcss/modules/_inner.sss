// ABOUT SERVICE
.about-service
  position: relative
  background: #00192C
  color: white
  padding-bottom: 90px
  &__wrapper
    display: flex
  &__content
    position: relative
    z-index: 2
    padding-top: 80px
    margin-right: 40px
    &-description
      margin-top: 70px
      display: flex
      margin-left: -5%
      margin-right: -5%
      p
        font-size: 14px
        color: white
        line-height: 1.3
      &__col
        flex: 0 1 50%
        display: flex
        flex-direction: column
        padding: 0 5%

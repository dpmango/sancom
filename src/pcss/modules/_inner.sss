        position: static
        max-width: 150px


.about-team
  padding: 90px 0 60px 0
  &__wrapper
    position: relative
    margin-left: 8.6%
  &__image
    position: relative
    margin-left: 15%
    margin-right: 7%
    transform: translate3d(0,-50px,0)
    img
      max-width: 100%
    &-overlay
      position: absolute
      top: 43%
      left: 50%
      transform: translateX(-50%)
      img
        transition: transform .1s ease
  &__person
    position: absolute
    max-width: 260px
    &--left-top
      left: 0
      top: 5%
    &--left-center
      max-width: 240px
      left: 0
      top: 45%
    &--right-center
      max-width: 215px
      right: 0
      top: 27%
    &--right-bottom
      max-width: 270px
      right: 10%
      bottom: 0%
    &__name
      font-size: 24px
      color: $colorGreen
      font-weight: 900
      margin-bottom: 10px
    &__desc
      font-size: 14px
      line-height: 1.42

@media($desktop)
  .about-team
    &__wrapper
      margin-left: 20px
    &__image
      margin-left: 60px
      margin-right: 20px

@media($tablet)
  .about-team
    padding: 70px 0 60px 0
    &__wrapper
      margin-left: 20px
    &__person
      &__name
        font-size: 22px

@media($mobile)
  .about-team
    &__wrapper
      padding-top: 70px
    &__image
      position: absolute
      top: 50%
      transform: translateY(-50%)
      margin-right: -20px
      > img
        opacity: .25
        filter: grayscale(1)
      &-overlay
        top: 135px
        right: 20px
        transform: none
    &__person
      position: static
      margin-bottom: 40px

// PROJECTS
.solutions
  padding-top: 80px
  padding-bottom: 50px
  &__wrapper
    margin: 40px 8.6% 0 8.6%
  &__intro
    max-width: 740px
    p
      color: $colorPurple
      font-size: 20px
      line-height: 1.42
  &__card
    position: relative
    margin-top: 70px
    display: flex
    padding-bottom: 60px
    &:last-child
      &::after
        display: none
    &::after
      position: absolute
      bottom: 0
      left: 0
      right: 0
      display: block
      content: ' '
      background: linear-gradient(to left, #39FF4A, #6000FF)
      height: 5px
    &__left
      flex: 0 0 270px
      color: $colorPurple
    &__right
      padding-left: 35px
    &__name
      font-size: 36px
      font-weight: 900
      line-height: 1.3
      margin-bottom: 10px
      color: $colorPurple
      img
        max-width: 100%
    &__scope
      font-size: 14px
      line-height: 1.4
      font-weight: 700
    &__label
      color: $colorGreen
      font-size: 16px
      font-weight: 700
      margin-top: 20px
    &__text
      p
        font-size: 14px
        line-height: 1.42
      a
        color: $colorPurple
        transition: all $transitionSpeed $ease
        &:hover
          color: $colorGreen
      &--hero
        p
          font-size: 20px
          &:first-child
            margin-top: 0

    &__icon
      margin-top: 10px
      flex: 0 0 70px
      text-align: center
      .ico
        transition: transform .1s linear
  &--cases
    padding-top: 60px
    .solutions
      &__intro
        max-width: 420px
      &__card
        margin-top: 50px
        padding-bottom: 50px
        &::after
          height: 1px
          background: color($fontColor a(30%))
        &__left
          flex-basis: 180px
        &__right
          padding-left: 60px
          padding-right: 40px

.t-purple
  color: $colorPurple

@media($desktop)
  .solutions

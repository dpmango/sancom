.t-formula
  color: white
  margin-top: 20px
  margin-bottom: 20px
  font-weight: 900
  display: flex
  align-items: center
  white-space: nowrap
  &__left
    font-size: 36px
  &__center
    display: flex
    margin-left: 20px
    margin-right: 15px
    &__exp
      position: relative
      font-size: 24px
      text-align: center
      margin-left: 10px
      margin-right: 10px
      &::after
        display: inline-block
        content: ' '
        position: absolute
        left: 0
        right: 0
        top: 50%
        transform: translateY(-50%)
        height: 3px
        background: white
        width: 100%
      &__top
        margin-top: 5px
      &__bottom
        position: absolute
        bottom: 5px
        left: 0
        right: 0
  &__right
    font-size: 36px
    display: flex
    align-items: center
  &__multiply
    display: inline-block
    line-height: 1
    padding-top: 10px
  &--smaller
    .t-formula
      &__center
        &__exp
          font-size: 18px
          &__top
            margin-top: 10px
          &__bottom
            bottom: 10px

@media(width <= 900px)
  .cases-formula__top__content
    flex: 0 0 550px
  .t-formula
    transform-origin: left center
    transform: scale(.8)

@media(width <= 510px)
  .t-formula
    transform: scale(.7)

@media(width <= 450px)
  .t-formula
    transform: scale(.6)

@media(width <= 375px)
  .t-formula
    transform: scale(.5)

        &__col
          padding: 0px 20px
    &__caption
      &__name
        font-size: 22px


@media($tablet)
  .about-service
    padding-bottom: 60px
    &__content
      margin-right: 0px
      &-description
        margin-top: 35px
        flex-direction: column
        margin-left: 0
        margin-right: 0
        &__col
          flex: 0 0 auto
          padding: 10px 0

@media($mobile)

// SOME INNER PAGES CONTENT

// ABOUT
.about-head
  overflow: hidden
  &__wrapper
    position: relative
    display: flex
    padding-top: 240px
    padding-bottom: 75px
    &::before
      display: block
      content: ' '
      position: absolute
      left: -215px
      top: -300px
      z-index: 1
      background: url('../images/aboutHeroBg.png') no-repeat left center
      width: 912px
      height: 1510px
      background-size: cover
  &__block
    flex: 1 1 auto
    margin-bottom: 80px
    .b-text
      margin-top: 40px
  &__left
    position: relative
    z-index: 2
    flex: 0 1 53%
    min-height: calc(100vh - 300px)
    max-height: 700px
    display: flex
    flex-direction: column
    justify-content: space-between
    padding-right: 20px
  &__right
    padding-top: 90px
    position: relative
    z-index: 2
    flex: 0 1 47%
    padding-left: 40px
    .b-ext-text
      margin-top: 0

@media($desktop)
  .about-head
    &__wrapper
      padding-top: 200px

@media($tablet)
  .about-head
    &__wrapper
      flex-direction: column
    &__left
      flex: 0 0 auto
      min-height: 0
    &__right
      flex: 0 0 auto
      padding-left: 20px
      padding-top: 20px
    &__block
      margin-bottom: 60px
      .b-text
        margin-top: 20px

@media($mobile)
  .about-head
    &__wrapper
      padding-top: 150px
    &__left
      padding-right: 0
    &__right
      padding-left: 0



.about-name
  background: #6000FF
  color: white
  padding-top: 60px
  padding-bottom: 80px
  &__title
    padding-top: 60px
    padding-bottom: 60px
    display: flex
    position: relative
    z-index: 2
    &__first
      display: inline-block
      position: relative
      .about-name__title__hint
        left: 0
        top: -65px
        &::after
          display: inline-block
    &__second
      display: inline-block
      position: relative
      margin-left: 15px
      .about-name__title__hint
        left: 10px
        bottom: -70px
        &::before
          display: inline-block
    &__huge
      color: $colorGreen
      font-size: 85px
      font-weight: 900
      line-height: 1
      span
        color: color($colorGreen a(50%))
    &__hint
      position: absolute
      font-size: 14px
      line-height: 1.4
      color: white
      width: 400px
      span
        display: block
        margin: 8px 0
      &::after, &::before
        display: none
        content: ' '
        width: 1px
        height: 25px
        background: $colorGreen
        margin-left: 7px
  &__description
    margin-bottom: 60px
    display: flex
  &__image
    position: relative
    z-index: 1
    flex: 0 0 120px
    margin-left: auto
    img
      position: absolute
      top: -50px
      right: 0
      max-width: 100%
      transition: transform .1s ease
  &__left
    position: relative
    z-index: 2
    flex: 0 1 680px
    padding-right: 20px
  &__right
    flex: 0 0 41.6%
    margin-top: -5px
  &__caption
    // margin-left: 20px
    // max-width: 440px
    font-size: 24px
    color: $colorGreen
    font-weight: 900
    line-height: 1.25
  &__list
    padding: 0
    margin: 0
    padding-top: 30px
    list-style: none
    li
      display: block
      position: relative
      margin-bottom: 5px
      &::before
        display: inline-block
        content: ' '
        position: absolute
        top: 50%
        transform: translateY(-50%) rotate(45deg)
        left: 0
        background: $colorGreen
        size: 10px
      span
        font-size: 20px
        padding-left: 30px
        display: inline-block

@media(width <= 1100px)
  .about-name
    &__title
      &__huge
        font-size: 74px

@media($desktop)
  .about-name
    &__title
      &__huge
        font-size: 65px

@media($tablet)
  .about-name
    position: relative
    padding-bottom: 60px
    &__title
      &__huge
        font-size: 50px
    &__description
      flex-direction: column
    &__left
      flex: 0 0 auto
    &__image
      position: absolute
      top: 0
      right: 20px
    &__right
      flex: 0 0 auto
      margin-top: 35px
      max-width: 500px
      padding-right: 0
    &__caption
      font-size: 20px
    &__list
      li
        span
          font-size: 17px

@media(width <= 660px)
  .about-name
    &__title
      flex-direction: column
      &__second
        margin-left: 0

@media($mobile)
  .about-name
    &__title
      &__huge
        span
          font-size: 40px



@media(width <= 460px)
  .about-name
    &__title
      &__huge
        span
          font-size: 22px


.about-client
  padding-top: 80px
  padding-bottom: 90px
  &__wrapper

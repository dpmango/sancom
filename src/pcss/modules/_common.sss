// THIS MIGHT INCLUDE HEADER, FOOTER AND OTHER
// COMMON ELEMENTS ACROSS THE SITE

// HEADER
.header
  position: absolute
  background: white
  left: 0
  right: 0
  height: 50px
  &__wrapper
    display: flex
    justify-content: space-between

  &--transformed
    position: fixed
    opacity: 0
    transform: translate3d(0, -80px, 0)
    .header__search
      transform: translate3d(0, 0px, 0)
  &--fixed
    opacity: 1
    transform: translate3d(0, 0px, 0)


// FOOTER
.footer
  flex: 0
